{{#partial "content"}}
    <h2 class="text-center mt-3">Welcome to Hero Squad</h2>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card p-3">
                    <h5 class="text-center">Create hero</h5>
                    <hr>
                    <form action="/success" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Enter name" required>
                        </div>
                        <div class="form-group">
                            <label for="squad">Squad name</label>
                            <input type="text" name="squad" class="form-control" id="squad" placeholder="Enter squad name" required>
                        </div>
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="number" name="age" min="0" required class="form-control" id="age" placeholder="Enter age ">
                        </div>
                        <div class="form-group">
                            <label for="powers">Special power</label>
                            <select name="powers" class="form-control" id="powers">
                                <option>Invisibility</option>
                                <option>Superhuman Strength</option>
                                <option>Flying</option>
                                <option>Shapeshifting</option>
                                <option>Super Senses</option>
                                <option>Telepathy/ Mind Control</option>
                                <option>Telekinesis</option>
                                <option>Power Absorbtion</option>
                                <option>Regenerative Power</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="weakness">Weakness</label>
                            <select name="weakness" class="form-control" id="weakness">
                                <option>Magic</option>
                                <option>Women</option>
                                <option>Ego</option>
                                <option>Fire</option>
                                <option>Sunlight</option>
                            </select>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-success"><i class="fa fa-plus "></i>
                                Add hero</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div>
                    <div class="row">
                    <div class="col-md-12 mt-2">
                    <div class="card p-4">
                        {{#if heroes}}
                            <h3 class="text-center" id="hero-title">My heroes</h3>
                            <hr>
                            {{#each heroes}}
                                <h5 id="hero-name">Name: {{ name }} ({{ age }} years)</h5>
                                <h5>ðŸ’ª  {{specialPowers}}</h5>
                                <h5>Weakness: {{weakness}}</h5>
                                <div class="text-center">
                                    <a href="/heroes/{{id}}"><button class="btn btn-default">Add to squad</button></a>
                                </div>
                                <hr>
                            {{/each}}
                        {{else}}
                            <h1 class="text-center">Add you hero over here!!</h1>
                            <hr>
                        </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}